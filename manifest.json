{
  "manifest_version": 3,
  "name": "YouTube Bookmarker",
  "version": "1.0.0",
  "description": "Bookmark YouTube videos at specific timestamps with a keyboard shortcut. Search and manage bookmarks with ease.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "utils.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "bookmark-video": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Bookmark current YouTube video at current timestamp"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}